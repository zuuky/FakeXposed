<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.XpFilter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>

        <item name="materialCardViewStyle">@style/Widget.XpFilter.CardView</item>
        <item name="materialButtonStyle">@style/Widget.XpFilter.Button</item>
        <item name="toolbarStyle">@style/Widget.XpFilter.Toolbar</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.XpFilter.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.XpFilter.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.XpFilter.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.XpFilter.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.XpFilter.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.XpFilter.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.XpFilter.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.XpFilter.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.XpFilter.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.XpFilter.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.XpFilter.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.XpFilter.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.XpFilter.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.XpFilter.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.XpFilter.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.XpFilter.LargeComponent
        </item>

        <item name="large_corner_size">10dp</item>
    </style>

</resources>